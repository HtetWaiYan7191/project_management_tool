<%= form_with(model: event) do |form| %>

  <div class="">
    <%= form.label :title, class:'form-label' %>
    <%= form.text_field :title, class:'form-control' %>
  </div>

  <div class="mt-3">
    <%= form.label :description, class:'form-label' %>
    <%= form.text_field :description, class:'form-control' %>
  </div>

  <div class="mt-3">
    <%= form.label :start_time, class:'form-label' %>
    <% if start_date.present? %>
     <%= form.datetime_field :start_time, value: start_date.strftime("%Y-%m-%d %H:%M"), class:'form-control' %>
    <% else %>
     <%= form.datetime_field :start_time, class:'form-control' %>
    <% end %>
    </div>

  <div class="mt-3">
    <%= form.label :end_time, class:'form-label' %>
    <% if start_date.present? %>
      <%= form.datetime_field :end_time, value: start_date.strftime("%Y-%m-%d %H:%M"), class:'form-control' %>
    <% else %>
     <%= form.datetime_field :end_time, class:'form-control' %>
    <% end %>
    </div>

  <div class="mt-3">
    <%= form.label :location, class:'form-label' %>
    <%= form.text_field :location, class:'form-control' %>
  </div>

  <div class="mt-3">
    <% if event.persisted? %>
      <%= form.submit "Update", class: 'btn btn-secondary' %>
    <% else %>
      <%= form.submit "Save", class: 'btn btn-secondary' %>
    <% end %>
  </div>
<% end %>

