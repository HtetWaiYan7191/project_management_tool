<div class="p-4 border border-b board-header d-flex justify-content-between align-items-center container-fluid">
    <div class="btn-container">
        <% if request.path == "/annoucements" %>
            <%= render partial: 'shared/icon_btn', locals: {icon_class: 'bi bi-plus', text: 'New Annoucement', link: new_annoucement_path, turbo_frame: 'annoucements'}%>
        <% else %>
            <%= render partial: 'shared/icon_btn', locals: {icon_class: 'bi bi-arrow-left', text: 'Back', link: annoucements_path, turbo_frame: 'annoucements'}%>
        <% end %>

    </div>

    <h3 class="fw-bold">Annoucement Board</h3>

    <div class="filter-container">
        <select class="form-select" aria-label="Default select example">
            <option selected>Open this select menu</option>
            <option value="1">One</option>
            <option value="2">Two</option>
            <option value="3">Three</option>
        </select>
    </div>
</div>