<!-- Prepend new messages to the message list -->
    <%= turbo_stream.prepend "messages-list" do %>
    <%= render partial: 'messages/messages', locals: { messages: @messages } %>
    <% end %>

    <!-- Update or remove the Load More button -->
    <%= turbo_stream.replace "pager" do %>
    <%= render partial: "messages/pager", locals: {next_page: @next_page} %>
    <% end %>

