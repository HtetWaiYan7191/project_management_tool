<%= turbo_frame_tag "reply_comment#{@comment.id}" do %>
        <%= form_with(model:[@annoucement, Comment.new], local: true, data: { turbo: false }) do |form| %>
            <%= form.hidden_field :parent_id, value: @comment.id %>
            <div class="d-flex justify-content-between align-items-center gap-3">
                <%= form.text_field :content,  placeholder: 'Add comment...',  class: 'form-control', required: true %>
                <button type="submit" class="btn btn-primary">
                        <i class="bi bi-caret-right-fill"></i>
                </button>
                <%= link_to "", "", data: {turbo_frame: "reply_comment#{@comment.id}"}, class: 'bi bi-x-lg'%>
            </div>
        <% end %>
<% end %>